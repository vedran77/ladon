{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"esModuleInterop": true,
		"declaration": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/index.ts"]
		},
		"outDir": "./bin",
		"rootDir": "./src"
	},
	"exclude": ["node_modules", "bin"],
	"include": ["src/**/*.ts"]
}
