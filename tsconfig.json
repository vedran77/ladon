{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"outDir": "bin",
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"exclude": ["node_modules", "bin"]
}
